<h2 style="text-align: center">Update {{professor.fname}} {{professor.lname}}:</h2>

<div class="container">
    <div class="row" style="text-align: center">
		<form id="update-professor" action="/professors/{{professor.id}}?_method=PUT" method="POST">
            <div class="form-group">
                First name: <input type="text" name="fname" value="{{professor.fname}}">
            </div>
            <div class="form-group">
                Last name: <input type="text" name="lname" value="{{professor.lname}}">
            </div>
            <div class="form-group">
                House: <select name="house" id="house-selector">
                    {{#each houses}}
                    	<option value="{{this.id}}">{{this.name}}</option>
                    {{/each}}
                </select>
            </div>
            <div class="form-group">
            	<input class="btn btn-warning" type="submit" value="Update Professor">
            </div>
        </form>
        <div class="form-group">
        	<form class="delete-form" action="/professors/{{professor.id}}?_method=DELETE" method="POST"><button class="btn btn-danger" type = "submit">Delete Professor</button>
        </div>
    </div>
</div>
<script defer>selecthouse({{professor.house}});</script>