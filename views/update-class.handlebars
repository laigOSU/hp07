<h2 style="text-align: center">Update {{class.name}}:</h2>

<div class="container">
    <div class="row" style="text-align: center">
		<form id="update-class" action="/classes/{{class.id}}?_method=PUT" method="POST">
            <div class="form-group">
                Name: <input type="text" name="name" value="{{class.name}}">
            </div>
            <div class="form-group">
                Teacher: <select name="teacher" id="teacher-selector"> 
                    {{#each professors}}
                    	<option value="{{this.id}}">{{this.fname}} {{this.lname}}</option>
                    {{/each}}
                </select>
            </div>
            <div class="form-group">
            	<input class="btn btn-warning" type="submit" value="Update Class">
            </div>
        </form>
        <div class="form-group">
        	<form class="delete-form" action="/classes/{{class.id}}?_method=DELETE" method="POST"><button class="btn btn-danger" type = "submit">Delete Class</button>
        </div>
    </div>
</div>