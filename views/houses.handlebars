<div class="page-header">
    <h1 style="text-align: center">Hogwarts Houses:</h1>
</div>

<div class="container">
    <table class="table table-striped table-bordered">
        <thead>
            <th>House Name</th>
        </thead>
        <tbody>
            {{#each houses}}
            <tr>
                <td>{{this.name}}</td>
                <td><a class="btn btn-primary" href="/houses/{{this.id}}">Update/Delete</a></td>
            </tr>
            {{/each}}
        </tbody>
    </table>
</div>

<hr>

<div class="container">
    <div class="row" style="text-align: center">
        <form id="addhouse" action="/houses" method="post">
            <div class="form-group">
                House Name: <input type="text" name="name"><br>
            </div>
            <input class="btn btn-success" type="submit" value="Add House">
        </form>
    </div>
</div>