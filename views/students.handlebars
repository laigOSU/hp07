<div class="page-header">
    <h1 style="text-align: center">Hogwarts Students:</h1>
</div>

<div class="container">
    <table class="table table-striped table-bordered">
        <thead>
            <th>First Name</th>
            <th>Last Name</th>
            <th>House</th>
        </thead>
        <tbody>
            {{#each students}}
            <tr>
                <td>{{this.fname}}</td>
                <td>{{this.lname}}</td>
                {{#if this.house}}<td>{{this.house}}</td>{{else}}<td>No House</td>{{/if}}
                <td><a class="btn btn-primary" href="/students/{{this.id}}">Update/Delete</a></td>
            </tr>
            {{/each}}
        </tbody>
    </table>
</div>

<hr>

<h2 style="text-align: center">Add a Student:</h2>

<div class="container">
    <div class="row" style="text-align: center">
        <form id="addstudent" action="/students" method="post">
            <div class="form-group">
                First name: <input type="text" name="fname">
            </div>
            <div class="form-group">
                Last name: <input type="text" name="lname">
            </div>
            <div class="form-group">
                House: <select name="house"> 
                    {{#each houses}}
                    <option value="{{id}}">{{this.name}}</option>
                    {{/each}}
                </select>
            </div>
            <div class="form-group">
            <input class="btn btn-success" type="submit" value="Add Student">
            </div>
        </form>
    </div>
</div>